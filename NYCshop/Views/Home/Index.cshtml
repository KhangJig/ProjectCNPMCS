@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/extra-css")
@*@Scripts.Render("~/bundles/modernizr")*@

<head>
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100' rel='stylesheet' type='text/css'>

    <!-- styles -->
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/animate.min.css" rel="stylesheet">
    <link href="~/Content/owl.carousel.css" rel="stylesheet">
    <link href="~/Content/owl.theme.css" rel="stylesheet">

    <!-- theme stylesheet -->
    <link href="~/Content/style.default.css" rel="stylesheet" id="theme-stylesheet">

    <!-- your stylesheet with modifications -->
    <link href="~/Content/custom.css" rel="stylesheet">

    <script src="~/Scripts/respond.min.js"></script>
</head>

<div id="content">

    <div class="container">
        <div class="col-md-12">
            <div id="main-slider">
                <div class="item">
                    <img src="~/Images/Slides/slide1.jpg" alt="" class="img-responsive">
                </div>
                <div class="item">
                    <img class="img-responsive" src="~/Images/Slides/slide2.jpg" alt="">
                </div>
                <div class="item">
                    <img class="img-responsive" src="~/Images/Slides/slide3.jpg" alt="">
                </div>
            </div>
            <!-- /#main-slider -->
        </div>
    </div>
    <div id="hot">
        <div class="box">
            <div class="container">
                <div class="col-md-12">
                    <h2>Nổi bật trong tuần</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="container">
                <div class="product-slider">
                    @for (int i = 0; i < 20; i++ )
                    {
                        <div class="item">
                        <div class="product">
                            <div class="flip-container">
                                <div class="flipper">
                                    <div class="front">
                                        <a href="detail.html">
                                            <img src="~/Images/Products/1_1.jpg" alt="" class="img-responsive">
                                        </a>
                                    </div>
                                    <div class="back">
                                        <a href="detail.html">
                                            <img src="~/Images/Products/1_2.jpg" alt="" class="img-responsive">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <a href="detail.html" class="invisible">
                                <img src="~/Images/Products/product1.jpg" alt="" class="img-responsive">
                            </a>
                            <div class="text">
                                <h3><a href="detail.html">Gấu tình nhân</a></h3>
                                <p class="price">143.000<u>đ</u></p>
                            </div>
                            <!-- /.text -->
                        </div>
                        <!-- /.product -->
                    </div>
                    }
                </div>
                <!-- /.product-slider -->
            </div>
    </div>
</div>

    <div id="hot">
        <div class="box">
            <div class="container">
                <div class="col-md-12">
                    <h2>Thời trang, đồ dùng cá nhân</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="container">
                <div class="product-slider">
                    @for (int i = 0; i < 20; i++)
                    {
                        <div class="item">
                            <div class="product">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                            <a href="detail.html">
                                                <img src="~/Images/Products/2_1.jpg" alt="" class="img-responsive">
                                            </a>
                                        </div>
                                        <div class="back">
                                            <a href="detail.html">
                                                <img src="~/Images/Products/2_2.jpg" alt="" class="img-responsive">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <a href="detail.html" class="invisible">
                                    <img src="~/Images/Products/product1.jpg" alt="" class="img-responsive">
                                </a>
                                <div class="text">
                                    <h3><a href="detail.html">Chăn tình nhân</a></h3>
                                    <p class="price">199.000<u>đ</u></p>
                                </div>
                                <!-- /.text -->
                            </div>
                            <!-- /.product -->
                        </div>
                    }
                </div>
                <!-- /.product-slider -->
            </div>
        </div>
    </div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/validate")
@Scripts.Render("~/bundles/extra-js")
