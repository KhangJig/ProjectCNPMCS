
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout2.cshtml";
}

<div class="animsition">
    <!-- Title Page -->
    <section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(images/banner.png);">
        <h2 class="l-text2 t-center">
            Add Item
        </h2>
    </section>
    <!-- content page -->
    <section class="bgwhite p-t-66 p-b-38">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <huge><strong>Thông tin sản phẩm</strong></huge>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <form role="form">

                                        <div class="form-group">
                                            <label>Tên sản phẩm</label>
                                            <input class="form-control" placeholder="Nhập tên sản phẩm">
                                        </div>
                                        <div class="form-group">
                                            <label>Tình trạng</label>
                                            <input class="form-control" placeholder="Nhập tình trạng sản phẩm">
                                        </div>
                                        <div class="form-group">
                                            <label>Giá bán</label>
                                            <input class="form-control" placeholder="Nhập giá sản phẩm">
                                        </div>

                                        <div class="form-group">
                                            <label>Hình ảnh</label>
                                            <input type="file">
                                        </div>
                                        <div class="form-group">
                                            <label>Chi tiết sản phẩm</label>
                                            <textarea class="form-control" rows="3"></textarea>
                                        </div>


                                        <div class="form-group">
                                            <label>Danh mục</label>
                                            <select class="form-control">
                                                <option>Xe cộ</option>
                                                <option>Máy tính</option>
                                                <option>Điện thoại</option>
                                                <option>Đồ gia dụng</option>
                                                <option>Khác...</option>
                                            </select>
                                        </div>


                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <huge><strong>Thông tin liên lạc</strong></huge>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <form role="form">
                                            <div class="form-group">
                                                <label>Tên người bán</label>
                                                <input class="form-control" placeholder="Nhập tên">
                                            </div>
                                            <div class="form-group">
                                                <label>Số điện thoại</label>
                                                <input class="form-control" placeholder="Nhập số điện thoại">
                                            </div>
                                            <div class="form-group">
                                                <label>Địa chỉ</label>
                                                <textarea class="form-control" rows="3"></textarea>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    

                </div>
            </div>
            <button type="submit" class="btn btn-default">Submit Button</button>
            <button type="reset" class="btn btn-default">Reset Button</button>

        </div>
        </section>

            </div>

