@model NYCshop.Models.ProductDetailViewModel
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .thumb {
        max-width: 100%;
        height: auto;
    }

    #productMain {
        padding: 30px;
    }

    .price {
        font-size: 30px;
        font-weight: 300;
        text-align: center;
        margin-top: 40px;
    }

    .required {
        color: red;
    }
</style>

<div class="row">
    <div class="col-md-9">
        <div class="row box" id="productMain">
            <div class="col-sm-6">
                <div id="mainImage">
                    @if (Model.ListImages.Count > 0)
                    {
                        <img src="@Model.ListImages[0]" alt="" class="img-responsive">
                    }
                </div>
            </div>
            <div class="col-sm-6 text-center">
                <div class="box">
                    <h1 class="text-center">@Model.ProductName</h1>
                    <p class="goToDescription">
                        <a href="#details" class="scroll-to">Mô tả</a>
                    </p>
                    <p class="price">@Html.DisplayFor(model => model.Price)</p>

                    <p class="text-center buttons">
                        <a href="basket.html" class="btn btn-default"><i class="fa fa-heart"></i> Thêm vào wishlist</a>
                    </p>


                </div>

                <div class="row" id="thumbs">
                    @for (int i = 0; i < Model.ListImages.Count; i++)
                    {
                        <div class="col-xs-4">
                            <a href="@Model.ListImages[i]" class="thumb">
                                <img src="@Model.ListImages[i]" alt="" class="img-responsive">
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        
    </div>
</div>


<div class="box col-xs-12" id="details">
    <h4>Chi tiết sản phẩm</h4>
    <span>@Model.Describe</span>

    <hr>
    <div class="social">
        <h4>Chia sẻ cho bạn bè</h4>
        <p>
            <a href="#" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
            <a href="#" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
            <a href="#" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
            <a href="#" class="email" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
        </p>
    </div>
</div>
@Html.Partial("_CommentViewPartial")
