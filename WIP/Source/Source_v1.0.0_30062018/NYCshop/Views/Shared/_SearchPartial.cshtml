@model NYCshop.ViewModels.SearchViewModel.SearchViewModel

<style>
    #btn-from-price, #btn-to-price {
        width: 40%;
    }

    #dropdown-checkbox {
        min-width: 250px;
    }
</style>

<div class="navbar-buttons">
    <div class="navbar-collapse collapse right" id="search-not-mobile">
        <button type="button" class="btn navbar-btn btn-primary" data-toggle="collapse" data-target="#search">
            <span class="sr-only">Toggle search</span>
            <i class="fa fa-search"></i>
        </button>
    </div>

</div>

<div class="clearfix collapse" id="search" style="height: 1px;">
    @using (Html.BeginForm("SearchProduct", "Search", new { searchString = Model.SearchString }, FormMethod.Get, new { id = "search-form", @class = "navbar-form" }))
    {
        <div class="input-group">
            <span style="width: 30%" class="input-group-btn">
                <select id="SearchType" name="SearchType" class="form-control">
                    <option value="Tên sản phẩm" selected>Tên sản phẩm</option>
                    <option value="Mô tả">Mô tả</option>
                    <option value="Người đăng">Người đăng</option>
                </select>
            </span>
            @Html.TextBoxFor(model => model.SearchString, new { id = "search-button", @class = "form-control", placeholder = "Tìm kiếm" })
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary" onclick="onclickSearchButton(this)"><i class="fa fa-search"></i></button>
            </span>
        </div>
    }
</div>

<script>
    function onclickSearchButton(e) {
        if ($("#search-button").val().trim() == "")
            alert("Hãy nhập gì đó vào ô tìm kiếm");
        else $("#search-form").submit();
    }
</script>

<script src="~/Scripts/dropdown-checkbox.js"></script>
@section scripts {
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js'></script>
}
