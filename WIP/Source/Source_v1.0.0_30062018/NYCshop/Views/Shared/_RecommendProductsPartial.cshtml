@model List<NYCshop.ViewModels.CategoryViewModel.CategoryDetailViewModel>

<div style="max-height: 474px; height: 474px;" class="col-md-4 box">
    <h4>CÓ THỂ BẠN SẼ THÍCH</h4>
    <div style="max-height: 400px;" class="pre-scrollable">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="Model[i]">
                <div class="product">
                    <div class="flip-container">
                        <div class="flipper">
                            <div class="front">
                                <a href="@Url.Action("Detail", "Product", new { Model[i].ProductID })">
                                    <img src="@Model[i].ListImages[0]" alt="" class="img-responsive">
                                </a>
                            </div>
                            <div class="back">
                                <a href="@Url.Action("Detail", "Product", new { Model[i].ProductID })">
                                    @if (Model[i].ListImages.Count > 1)
                                    {
                                        <img src="@Model[i].ListImages[1]" alt="" class="img-responsive">
                                    }
                                    else 
                                    {
                                        <img src="@Model[i].ListImages[0]" alt="" class="img-responsive">
                                    }
                                </a>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("Detail", "Product", new { Model[i].ProductID })" class="invisible">
                        <img src="@Model[i].ListImages[0]" alt="" class="img-responsive">
                    </a>
                    <div class="text">
                        <h3><a href="@Url.Action("Detail", "Product", new { Model[i].ProductID })">@Model[i].ProductName</a></h3>
                        <p class="price">@string.Format("{0:0,0}", Model[i].Price)<u>đ</u></p>
                    </div>
                    <!-- /.text -->
                </div>
                <!-- /.product -->
            </div>
        }
    </div>
</div>
