@model NYCshop.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /*.field-validation-error {
        color: red;
    }*/
</style>

<div class="col-md-3"></div>
<div class="box col-md-6">
    <h1>Đăng nhập</h1>
    <hr>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Role)

            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @class = "control-label" })

                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Username)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })

                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(model => model.Password)

            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary" name="login"><i class="fa fa-sign-in"></i>Đăng nhập</button>
                <button type="submit" class="btn btn-primary" name="register"><i class="fa fa-user-md"></i>Đăng ký</button>
            </div>
        </div>
    }
</div>
<div class="col-md-3"></div>
